@{
    List<Produto> produtos = ViewBag.Produtos;
    DateTime dataHora = ViewBag;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h2>Gerenciamento de Produtos</h2>
    <a asp-action="Cadastrar">Cadastrar Produto</a>


    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th>Criado em</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @forech(Protudo item in produtos)
            {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.Quantidade</td>
                <td>@item.CriadoEm</td>
                <td>
                    <a asp-action="Remover" asp-route-id="@item.ProdutoId">Remover</a>
                </td>
                <td></td>
            </tr>
            }

        </tbody>
    </table>
    <p>
        <b>Dados atualizados em: </b>@d
    </p>


</body>
</html>
